<div id="weapon-<%= weapon.id %>" class="row-fluid weapon" data-delete-path="<%= tome_weapon_path @tome.id, weapon.id %>">
  <div class="span8 weapon-<%= weapon.id %> tome-item">
    <span id="weapon-<%= weapon.id %>-bonus-value" class="weapon-bonus" data-edit-path="<%= tome_weapon_path @tome.id, weapon.id %>">+<%= weapon.value %></span>
    <span id="weapon-<%= weapon.id %>-value" class="weapon-label" data-original-value="<%= weapon.label %>" data-input-placeholder="a skill you have" data-edit-path="<%= tome_weapon_path @tome.id, weapon.id %>" data-edit-field="label"><%= weapon.label %></span>
    <%= render :partial => "/tomes/delete_button", :object => "weapon-#{weapon.id}" %>
    <%= render :partial => "/tomes/edit_button", :object => "weapon-#{weapon.id}" %>
    <button class="btn btn-mini btn-success increase-tome-item" data-for="weapon-<%= weapon.id %>-bonus-value"><i class="icon-plus"></i></button>
    <button class="btn btn-mini btn-danger decrease-tome-item" data-for="weapon-<%= weapon.id %>-bonus-value"><i class="icon-minus"></i></button>
  </div>
</div>
