<div class="goal goal-<%= goal.id %>">
  <div class="row-fluid">
    <h4 class="goal-label <%= "text-success" if goal.accomplished? %>"><%= goal.label %></h4>

    <div class="span10">
      <div class="progress goal-<%= goal.id %>-progress">
        <div class="bar bar-success" style="width: <%= goal.accomplished_percent %>%;">
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span1">
      <button id="toggle-tasks-for-<%= goal.id %>" class="btn btn-mini toggle-tasks" data-toggle="collapse" data-target="#tasks-for-<%= goal.id %>">
        <i class="icon-chevron-down"></i>
      </button>
    </div>
  </div>

  <div id="tasks-for-<%= goal.id %>" class="collapse tasks">
    <% goal.tasks.each do |task| %>
      <%= render :partial => "task", :object => task %>
    <% end %>

    <div id="new-tasks-for-<%= goal.id %>">
    </div>

    <% if can_edit? %>
      <div class="row-fluid">
        <input class="btn create-task" type="button" value="New Task" data-goal-id="<%= goal.id %>" data-new-task-path="<%= tome_goal_tasks_path @tome.id, goal.id %>" />
      </div>
    <% end %>
  </div>
</div>

<hr />
